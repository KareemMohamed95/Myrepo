<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blueback"
    tools:context=".AppActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/PIB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="153dp"
        android:text="View Personal Information"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ViewCart3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:text="View Shopping Cart"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/PIB"
        app:layout_constraintTop_toBottomOf="@+id/PIB" />

    <Button
        android:id="@+id/BrowseP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="Browse Categories"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/ViewCart3"
        app:layout_constraintTop_toBottomOf="@+id/ViewCart3" />

    <Button
        android:id="@+id/SearchSB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Search for product"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BrowseP" />

</android.support.constraint.ConstraintLayout>