<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/blueback">

    <TextView
        android:id="@+id/textvview2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="49dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="16dp"
        android:text="Password"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/LoginP"
        app:layout_constraintEnd_toEndOf="@+id/LoginP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LoginE" />

    <TextView
        android:id="@+id/textvview3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="14dp"
        android:text="Email address"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/LoginE"
        app:layout_constraintEnd_toEndOf="@+id/textvview2"
        app:layout_constraintStart_toStartOf="@+id/LoginE"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/LoginE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/textvview2"
        app:layout_constraintEnd_toEndOf="@+id/LoginP"
        app:layout_constraintStart_toStartOf="@+id/textvview2"
        app:layout_constraintTop_toBottomOf="@+id/textvview3" />

    <EditText
        android:id="@+id/LoginP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:layout_marginBottom="43dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/Rem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textvview2" />

    <CheckBox
        android:id="@+id/Rem"
        android:layout_width="171dp"
        android:layout_height="0dp"
        android:layout_marginStart="49dp"
        android:layout_marginBottom="33dp"
        android:text="Remember Me ?"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/LoginPP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LoginP" />

    <Button
        android:id="@+id/LoginPP"
        android:layout_width="193dp"
        android:layout_height="0dp"
        android:layout_marginBottom="62dp"
        android:text="LOGIN"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Rem" />

</android.support.constraint.ConstraintLayout>